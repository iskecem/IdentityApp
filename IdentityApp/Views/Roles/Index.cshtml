@model IEnumerable<AppRole>


<a class="btn btn-secondary" asp-action="Create">Create Role</a>
<br>
<br>

<table class="table table-sm table-bordered">
	<thread>
		<tr>
			<th>Id</th>
			<th>Role Name</th>
			<th>Users</th>
			<th style="width: 125px"></th>
		</tr>
	</thread>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="4" class="text-center">No Role</td>
			</tr>
		}

		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td asp-role-users="@role.Id"></td>
				<td>
					<a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>

					<form asp-action="Delete" method="post" onsubmit="return confirm('Silmek istediginizden emin misiniz?')" style="display: inline-block;">
						<input type="hidden" value="@role.Id" name="id">
						<button type="submit" class="btn btn-danger btn-sm" href="">Delete</button>
					</form>

				</td>
			</tr>
		}
	</tbody>
</table>
